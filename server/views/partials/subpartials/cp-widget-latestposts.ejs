

<% if(data != 'undefined') { %>
    <% data.news.forEach(item => { %>

    <!-- Single Featured Post -->
    <div class="single-blog-post small-featured-post d-flex">
        <div class="post-thumb">
            <a href="#"><img src="img/bg-img/19.jpg" alt=""></a>
        </div>
        <div class="post-data">
            <a href="#" class="post-catagory"> <%- item.category %> </a>
            <div class="post-meta">
                <a href="#" class="post-title">
                    <h6> <%- item.title %> </h6>
                </a>
                <p class="post-date"><span> <%= dateAndTime.format(item.datetime, 'ddd MMM DD YYYY') %> </span></p>
            </div>
        </div>
    </div>

<% })  %>
<% } %> 






